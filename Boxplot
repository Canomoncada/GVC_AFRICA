  "LAC"    = "#FF7F00",     # Orange
  "OECD"   = "#1F78B4",     # Blue
  "ASEAN"  = "#33A02C",     # Green
  "CHINA"  = "#E31A1C",     # Red
  "AFRICA" = "#FFD700"      # Yellow
)

