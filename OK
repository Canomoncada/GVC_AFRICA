      x = "Region",
      y = "NORMALIZED SCORE (0-1)",
      caption = create_gvc_caption("Note: For CO2 Intensity Index, a higher score = lower emissions (better).")
    ) +
    create_gvc_comprehensive_theme_fixed()
  
