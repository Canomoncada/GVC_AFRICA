    filter(!is.na(Score))
  
  p3 <- ggplot(plot_data, aes(x = Region, y = Score, fill = Region)) +
    geom_violin(alpha = 0.7, scale = "width") +
    geom_boxplot(width = 0.3, alpha = 0.8, outlier.shape = NA) +
